<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hello_World.MainPage">

    <StackLayout>
        <Label Text="Hello World!" TextColor="Black" FontSize="30" HorizontalOptions="Center"/>
        <Entry x:Name="txtName" Keyboard="Text" ReturnType="Default"/>
        
        <Button Text="Hello" Clicked="Button_Clicked" TextColor="Black" FontSize="20"/>
        <Button x:Name="btnImagem" Clicked="btnImagem_Clicked" Text="Image"
            BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" CornerRadius="20" HorizontalOptions="CenterAndExpand"/>
        <Button x:Name="btnTexti" Clicked="btnTexti_Clicked" Text="Text"
            BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" CornerRadius="20" HorizontalOptions="CenterAndExpand"/>
        <Image Source="clam.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="CenterAndExpand"/>

        <Button x:Name="btnEvents" Text="Events" Pressed="btnEvents_Pressed" Released="btnEvents_Released"
                BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" CornerRadius="20" HorizontalOptions="CenterAndExpand"/>
        <Label x:Name="lblEvents" Text="-" TextColor="Black" FontSize="24" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
